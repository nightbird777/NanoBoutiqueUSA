@{
    Layout = "_Layout";
}

<form action="/Product/SaveNewProduct" method="post" enctype="multipart/form-data">

    <span style="color:magenta" class="fw-bolder">@ViewBag.message</span>

    <div class="card-body">
        <div class="card card-border card-primary">
            <div class="card-header border-primary bg-transparent pb-0">
                <h3 class="card-title text-primary">Create New Product</h3>
            </div>

            <div class="card-body">
                <div class="row">

                    <div class="col-xl-5">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" class="form-control" placeholder="Enter product name"/>
                        </div>
                    </div>
                    <div class="col-xl-5">
                        <div class="form-group">
                            <label for="description">Description</label>
                            <input type="text" name="description" id="description" class="form-control" placeholder="Enter product description"/>
                        </div>
                    </div>
                    <div class="col-xl-5">
                        <div class="form-group">
                         <label for="price">Price</label>
                        <input type="text" name="price" id="price" class="form-control" placeholder="Enter product price here"/>
                        </div>
                    </div>
                    <br /><br />
                    <div class="col-xl-5">
                        <div class="form-group">
                            <input type="file" name="img" id="img" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    @if (ViewBag.errorMessage != null)
    {

        foreach (var errorMessage in @ViewBag.errorMessage)
        {
            <p style="color:magenta">
                @errorMessage;
            </p>
        }
    }


    <div class="form-group row">
        <div class="col-lg-5">
            <button type="reset" class="btn btn-primary btn-rounded waves-effect waves-light">Clear</button>
            <button type="submit" class="btn btn-primary btn-rounded waves-effect waves-light">Create New Product</button>
        </div>
    </div>

</form>



