@{
    Layout = "_Login";
}

<div class="account-pages my-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card mt-4">
                    <div class="card-header bg-img p-5 position-relative">
                        <div class="bg-overlay"></div>
                        <h4 class="text-white text-center mb-0">Two Factor Authentication</h4>
                    </div>
                    <div class="card-body p-4 mt-2">
                        <form action="/login/verifyOTP" class="p-3" method="post">

                            <div class="form-group mb-3">
                                <h3 class="text-center">Verify OTP Code</h3>
                                </div>

                            <div class="form-group mb-3">
                                <input name="otpCode" id="otpCode" class="form-control text-center" type="text" placeholder="Please enter the otp code here!!!">
                            </div>

                            <div class="form-group text-center mt-5 mb-4">
                                <button class="btn btn-primary waves-effect width-md waves-light" type="submit"> Verify Code </button>
                            </div>
                        </form>
                    </div>
                    <!-- end card-body -->
                </div>  <!-- end card -->
            </div>  <!-- end col -->
        </div>  <!-- end row -->
    </div> <!-- end container -->
</div>